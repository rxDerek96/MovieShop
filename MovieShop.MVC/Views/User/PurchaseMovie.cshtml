
@inject ICurrentUserService CurrentUserService
@using ApplicationCore.ServiceInterfaces
@model ApplicationCore.Models.Request.PurchaseRequestModel


<form method="post" asp-controller="User" asp-action="PurchaseMovie">
    <div class="card mb-3 container shadow ">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5>Order Summary</h5>
                    <hr />
                    <div class="row">
                        <div class="col-md-6 h5">
                            @Model.Title
                        </div>
                        <div class="col-md-6 h5">
                            $@Model.Price
                        </div>
                        <div class="form-group">
                            <label asp-for="MovieId" class="control-label"></label>
                            <input asp-for="MovieId" class="form-control" readonly />
                            <span asp-validation-for="MovieId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" readonly />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" readonly />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <input type="submit" value="Confirm Purchase" class="btn btn-primary btn-lg btn-block" />
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</form>